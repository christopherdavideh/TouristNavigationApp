<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TouristNavigationApp.Views.LoginPage">
    <ScrollView>
        <VerticalStackLayout
        Spacing="10"
        Padding="25">
            <Label 
            Text="Login" 
            FontSize="25"
            HorizontalOptions="Start"/>
            <Label x:Name="listaUsuarios"/>
            <Label/>
            <Label
            Text="Correo"
            FontSize="18"
            TextColor="Gray"/>
            <Entry
            x:Name="txtCorreo"
            Placeholder="Ingrese el correo"
            FontSize="18"/>
            <Label
            Text="Contraseña"
            FontSize="18"
            TextColor="Gray"/>
            <Entry
            x:Name="txtContrasenia"
            Placeholder="Ingrese la contraseña"
            FontSize="18"/>
            <Button
            x:Name="btnLogin"
            Text="Continuar"
            BackgroundColor="Blue"
            FontSize="18"
            Clicked="btnLogin_Clicked"/>
            <Label/>
            <Button
            x:Name="btnRegister"
            Text="Registrarme"
            Background="Green"
            FontSize="18"
            Clicked="btnRegister_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>