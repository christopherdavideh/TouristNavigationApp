<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TouristNavigationApp.Views.NavigationPage"
             Title="NavigationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <VerticalStackLayout>
            <Label Text=""/>

            <Label Text="    Hola Daniel!"
               FontAttributes="Bold"
               FontSize="24"/>
            <Label Text=""/>

            <SearchBar Placeholder="Buscar un sitio turistico" />

            <Label Text=""/>
            <Image Source="maps.png" 
               HeightRequest="470"
               HorizontalOptions="Center" 
               VerticalOptions="Center" />

            <Label Text=""/>
            <Label Text="Universidad Israel"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Start"
               Margin="20,0,0,0"/>

            <Label Text="Universidad con 25 aÃ±os en el mercado ecuatoriano. Carreras de Grado y Posgrado. La diferencia entre ser y hacer."
               HorizontalOptions="Start"
               Margin="20,0,0,0"/>
        </VerticalStackLayout>


        <StackLayout Grid.Row="1" Orientation="Horizontal" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand">
            <Frame Padding="0" HasShadow="False" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" BorderColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="InicioButton_Tapped" />
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image Source="inicio.png" WidthRequest="35" HeightRequest="60" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <Frame Padding="0" HasShadow="False" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" BorderColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="IAButton_Tapped" />
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image Source="ia.png" WidthRequest="45" HeightRequest="60" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <Frame Padding="0" HasShadow="False" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" BorderColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="PerfilButton_Tapped" />
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image Source="perfil.png" WidthRequest="35" HeightRequest="60" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>
        </StackLayout>





    </Grid>
</ContentPage>